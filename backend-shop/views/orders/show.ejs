<%- include('../layouts/sidebar') %>
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Chi tiết đơn hàng</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="mb-4">Chi tiết đơn hàng #<%= order.id %></h1>

    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <p><strong>Người đặt:</strong> <%= order.user_name %> (<%= order.user_email %>)</p>
        <p><strong>Sản phẩm:</strong> <%= order.product_name %></p>
        <p><strong>Số lượng:</strong> <%= order.quantity %></p>
        <p><strong>Phiếu thanh toán:</strong>
          <% if (order.payment_receipt && order.payment_receipt.startsWith('/uploads/')) { %>
            <a href="<%= order.payment_receipt %>" target="_blank">Xem file phiếu thanh toán</a>
          <% } else { %>
            <%= order.payment_receipt || 'Không có' %>
          <% } %>
        </p>
        <p><strong>Địa chỉ nhận hàng:</strong> <%= order.shipping_address %></p>
        <p><strong>Trạng thái:</strong> <%= order.status %></p>
        <p><strong>Tạo lúc:</strong> <%= order.created_at %></p>
        <div class="mt-3">
          <a href="/orders/<%= order.id %>/edit" class="btn btn-warning">Sửa</a>
          <form action="/orders/<%= order.id %>/delete" method="POST" style="display:inline" onsubmit="return confirm('Xác nhận xóa?')">
            <button class="btn btn-danger" type="submit">Xóa</button>
          </form>
          <a href="/orders" class="btn btn-secondary">Quay lại</a>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
