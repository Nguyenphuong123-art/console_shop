<script>
  (function(){
    const sidebar = document.querySelector('.yt-sidebar');
    const toggle = document.getElementById('sidebarToggle');
    const main = document.querySelector('.main-content');
    const key = 'sidebarCollapsed';
    function applyState(collapsed){
      if (collapsed) {
        sidebar.classList.add('collapsed');
        if (main) main.classList.remove('shifted'); main && main.classList.add('shifted-collapsed');
      } else {
        sidebar.classList.remove('collapsed');
        if (main) main.classList.remove('shifted-collapsed'); main && main.classList.add('shifted');
      }
    }
    // initialize
    const stored = localStorage.getItem(key);
    const isCollapsed = stored === 'true';
    applyState(isCollapsed);
    if (!toggle) return;
    toggle.addEventListener('click', function(){
      const collapsedNow = sidebar.classList.toggle('collapsed');
      localStorage.setItem(key, collapsedNow ? 'true' : 'false');
      // adjust main-content margin
      if (main) {
        if (collapsedNow) {
          main.classList.remove('shifted'); main.classList.add('shifted-collapsed');
        } else {
          main.classList.remove('shifted-collapsed'); main.classList.add('shifted');
        }
      }
    });
  })();
</script>